<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


<!DOCTYPE html>
<html>
  <head>
    <title>Vagabond</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<nav class="navbar navbar-light bg-light">
  <div class="container">

    <a class="navbar-brand" href= <%= places_path %> >
      <img src="/app/assets/images/logo.png" alt="" width="80" height="65" >
    </a>
  </div>
</nav>

<% if @current_user %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
          <a class="navbar-brand" href="#">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
            <a class="nav-link active" aria-current="page"><%= link_to "Profile", user_path(@current_user) %></a>
            <a class="nav-link"><%= link_to "Traveler Reviews", reviews_path %></a>
            <a class="nav-link"><%= link_to "Explore Vagabond", places_path %></a>
            <a class="nav-link"><%= link_to "Contact us", contacts_path %></a>
        
            <button type="button" class="btn btn-light">
              <%= button_to "Logout", logout_path, method: :delete %>
            </button>
          
            </div>
            </a>
          </div>
          </div>
    </nav>

    <% else %>
      <nav>
        <%= link_to "Login", new_session_path %>
        <%= link_to "Sign Up", new_user_path %>
      </nav>
    <% end %>
    <%= yield %>
  </body>
</html>

      
  
