
<h4>Comments:</h4>
<% @comments.each do |comment| %>
    <p><strong><%= comment.user.username %>:</strong></p>
    <p><%= comment.content %> (<%= time_ago_in_words(comment.created_at) %>)</p>
    <% if @current_user == comment.user%>
        <%= button_to "Delete comment", [comment.review, comment], method: :delete %>
    <% end %>
<% end %>

<%= render 'comments/form' %>