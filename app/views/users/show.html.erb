<h1 style="text-align:center;">Profile Page</h1>
<style>
body {text-align: center;}

</style>
    
<body>

<img src="<%= @user.image_url.to_s %>" alt="profile photo" width="85" height="90">

<br>
<p>Name: <%= @user.name %></p>
<p>Username: <%= @user.username %></p>
<p>Date of Birth: <%= @user.date_of_birth.strftime('%Y-%m-%d') %></p>
<p>Bio: <%= @user.bio %></p>
<p>City: <%= @user.city %></p>
<p>Reviews: <% @user.reviews.each do |review| %></p>
                <p><%= link_to review.review, review_path(review.id)%></p>
            <% end %>
<p><%= link_to "Vagabond places", places_path %></p>
<p><%= link_to "Vagabond reviews", reviews_path %></p>

    
</body>


