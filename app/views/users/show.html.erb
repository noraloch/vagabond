<div class="body-margin">

<h1>Profile Page</h1>
<style>
img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
}


</style>
    

<div class="text-left">
<% if @user.image? %>
    <img src="<%= @user.image_url.to_s %>" alt="profile photo" >
<% end %>
</div>

<br>
<div>
<p>Name: <%= @user.name %></p>
<p>Username: <%= @user.username %></p>
<p>Date of Birth: <%= @user.date_of_birth.strftime('%Y-%m-%d') %></p>
<p>Bio: <%= @user.bio %></p>
<p>City: <%= @user.city %></p>

</div>
  

<div class="card border-light mb-3" style="max-width: 18rem;">
  <div class="card-header"><h4>Reviews</h4></div>
  <div class="card-body">
  <class="card-title"><% @user.reviews.each do |review| %>
    <p><%= link_to review.title, review_path(review) %>
    <% end %><p>
    </div>
    </div>
</div>

<br>
<br>


<div style="text-align:center">
<% if @current_user == @user %>

<button type="button" class="btn btn-light">
    <%= link_to "Edit Profile", edit_user_path(@current_user) %>
</button>
<% end %>
</div>






